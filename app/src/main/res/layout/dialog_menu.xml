<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp">

    <TextView
        android:id="@+id/tvKeterangan"
        android:layout_marginBottom="15dp"
        android:fontFamily="@font/proximanovalight"
        android:gravity="center"
        android:text="Menu Lainnya"
        android:textSize="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <View
        android:layout_marginBottom="20dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#40747474"/>


    <LinearLayout
        android:id="@+id/lSinkron"
        android:foreground="?android:attr/selectableItemBackground"
        android:layout_marginBottom="10dp"
        android:layout_gravity="center"
        android:background="@drawable/bg_syc"
        android:layout_width="220dp"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_gravity="center"
            android:layout_marginLeft="5dp"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@mipmap/ic_sinkron"
            />

        <TextView
            android:layout_marginRight="15dp"
            android:layout_gravity="center"
            android:fontFamily="@font/proximanovalight"
            android:text="Download Data"
            android:textSize="18dp"
            android:textColor="#fff"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/lExit"
        android:foreground="?android:attr/selectableItemBackground"
        android:layout_marginBottom="5dp"
        android:layout_gravity="center"
        android:background="@drawable/bg_exit"
        android:layout_width="220dp"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_gravity="center"
            android:layout_marginLeft="5dp"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@mipmap/ic_exit"
            />

        <TextView
            android:layout_marginRight="15dp"
            android:layout_gravity="center"
            android:fontFamily="@font/proximanovalight"
            android:text="Keluar Aplikasi"
            android:textSize="18dp"
            android:textColor="#fff"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>

</LinearLayout>