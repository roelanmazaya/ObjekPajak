<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="horizontal"
    >

    <ImageView
        android:id="@+id/ivBerkas"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:scaleType="centerCrop"
        android:layout_marginBottom="7dp"/>

    <ImageView
        android:visibility="gone"
        android:layout_gravity="top"
        android:id="@+id/ivHapus"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_margin="5dp"
        android:background="@mipmap/ic_hapus"/>


    <RelativeLayout
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_toRightOf="@+id/ivBerkas"
        android:id="@+id/rData"
        tools:ignore="NotSibling">

        <LinearLayout
            android:id="@+id/ltext"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_toLeftOf="@+id/licon"
            android:layout_toStartOf="@+id/licon"
            tools:ignore="Orientation"
            android:padding="10dp">

            <TextView
                android:id="@+id/tvBerkas"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_gravity="center"
                android:gravity="left"
                android:layout_marginRight="3dp"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="n kemudahan"
                android:textSize="15sp" />

            <ImageView
                android:id="@+id/tvPeringatan"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_marginRight="5dp"
                android:visibility="gone" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:id="@+id/licon"
            android:layout_alignParentRight="true">
            <ImageView
                android:id="@+id/xicon"
                android:src="@mipmap/ic_gagal"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#a1a1a1"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="10dp"
            android:layout_toStartOf="@+id/licon"
            android:layout_toLeftOf="@+id/licon"
            android:layout_marginRight="10dp"/>


    </RelativeLayout>

</LinearLayout>
