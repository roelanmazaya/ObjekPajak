<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="5dp">

    <ImageView
        android:id="@+id/ivBerhasil"
        android:layout_gravity="center"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:background="@mipmap/ic_berhasil"
        />

    <ImageView
        android:visibility="gone"
        android:id="@+id/ivDetail"
        android:layout_gravity="center"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:background="@mipmap/ic_detail"
        />

    <ImageView
        android:visibility="gone"
        android:id="@+id/ivGagal"
        android:layout_gravity="center"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:background="@mipmap/ic_gagal"
        />


    <TextView
        android:id="@+id/tvKeterangan"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/proximanovalight"
        android:gravity="center"
        android:text="Selamat Berhasil Masuk !"
        android:textSize="17dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:layout_marginBottom="10dp"
        android:fontFamily="@font/proximanovalight"
        android:background="@drawable/bg_btn_ok"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        android:layout_width="200dp"
        android:text="OK"
        android:textSize="20dp"
        android:textColor="#fff"
        android:layout_height="40dp"
        android:id="@+id/btnOk"/>

</LinearLayout>